<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

<!-- Passenger Car Type -->
<!-- Willingness for strategic lane changes --><!-- Willingness to help others change lanes --><!-- Lane change for speed gain --><!-- Tendency to keep right -->
       
<vType id="passenger_1" vClass="passenger" guiShape="passenger"
       color="210,0,0"
       laneChangeModel="LC2013" 
       lcStrategic="0" lcSpeedGain="0"  lcKeepRight="0"  lcCooperative="0"/>  
       
<vType id="passenger_2" vClass="passenger" guiShape="passenger"
       minGap="2.5" maxSpeed="45.0" accel="2.5" decel="3.0"
	   laneChangeModel="LC2013" 
	   color="0,165,0"
       lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/>   

<vType id="passenger_3" vClass="passenger" guiShape="passenger"
	   laneChangeModel="LC2013" 
       lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/> 

<!-- Emergency Vehicle Type -->
<vType id="emergency" vClass="emergency" guiShape="emergency"
       minGap="2.5" maxSpeed="25.0" accel="3.5" decel="4.5"
       emergencyDecel="6.0" length="5.0" width="1.8"
       collisionMinGapFactor="0" carFollowModel="Krauss" sigma="0.5"
       color="0,0,0"/>

<!-- ==================== Straight Routes ==================== -->
<route id="r_L_R" edges="E#L-R" />   <!-- From Left (L) → Straight towards → Right (R) -->
<route id="r_R_L" edges="E#R-L" />   <!-- From Right (R) → Straight towards → Left (L) -->

<!-- Flows -->
<!-- ===================== Flow using 'Fixed Birth Interval' ===================== -->

<!--  Option 1 -->

<flow id="F_Fixed_1" type="passenger_2" route="r_L_R"
	    begin="0" 
	    period="1" 
	    number="1000"
	    departLane="2" 
		departSpeed="max"
		departPos="base"/>  
		
 <!-- period="15" ; This will insert one vehicle every 15 seconds -->
 <!-- number="1000" ; Total 1000 vehicles will be inserted with one vehicle every 5 seconds throughoutthe simulation (if simulation time allows)-->
 
 <!-- departLane="2"  ;Right Most lane index is 0 -->
 <!-- departPos="base" ; from strating of lane -->

<!--  Option 2 -->
<flow id="F_Fixed_2" type="passenger_2" route="r_R_L"
	    begin="0" end="1200"
	    period="1" 
	    departLane="0"
		departSpeed="max"
		departPos="base"/>  	
							  
</routes>